-# expects: href, button_text, alt_button (optional, hash with :href and :text)
- alt_button ||= nil

.border-4.p-4.mt-4.bg-gray-200
  %img{src: href}
  .mt-6.mb-1.flex
    %a.no-underline.text-black.border-4.w-auto.bg-white.px-6.py-3{href:, download: true, type: "image/png"}
      = button_text
    - if alt_button
      %a.no-underline.text-black.border-4.w-auto.bg-white.px-6.py-3.ml-4{href: alt_button[:href], download: true, type: "image/png"}
        = alt_button[:text]
